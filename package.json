{
  "name": "yesno-win",
  "version": "1.0.0",
  "private": true,
  "description": "YesNo.Win - Polymarket-style prediction market on Base",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:web": "pnpm --filter web dev",
    "build": "pnpm build:contracts && pnpm build:sdk && pnpm -r build",
    "build:web": "pnpm --filter web build",
    "build:contracts": "pnpm --filter contracts build",
    "build:sdk": "pnpm --filter sdk generate",
    "test": "pnpm test:contracts",
    "test:contracts": "pnpm --filter contracts test",
    "test:watch": "pnpm --filter contracts test:watch",
    "test:verbose": "pnpm --filter contracts test:verbose",
    "test:gas": "pnpm --filter contracts test:gas",
    "test:coverage": "pnpm --filter contracts coverage",
    "test:integration": "pnpm build:contracts && pnpm build:sdk && node packages/sdk/scripts/smoke-test.js",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,sol,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,sol,js,jsx,json,md}\"",
    "deploy:base-sepolia": "pnpm --filter contracts deploy:base-sepolia",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "dependencies": {
    "thirdweb": "^5.110.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "turbo": "^1.13.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.20.0"
}

